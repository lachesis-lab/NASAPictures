<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/note_header"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="Заметка"
        android:textSize="35sp"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/note_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/arrow_down"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="50dp"
        app:srcCompat="@android:drawable/arrow_up_float"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="50dp"
        app:layout_constraintBottom_toTopOf="@id/note_content"
        app:layout_constraintStart_toEndOf="@id/note_header"
        app:layout_constraintTop_toTopOf="@id/arrow_up"
        app:layout_constraintVertical_bias="0.719"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/add_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="50dp"
        app:layout_constraintBottom_toTopOf="@id/drop_note"
        app:layout_constraintStart_toEndOf="@id/arrow_up"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_input_add" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/drop_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="50dp"
        app:layout_constraintBottom_toTopOf="@id/note_content"
        app:layout_constraintStart_toEndOf="@id/arrow_down"
        app:layout_constraintTop_toTopOf="@id/arrow_up"
        app:layout_constraintVertical_bias="0.719"
        app:srcCompat="@android:drawable/ic_delete" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/view_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/add_note"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_view" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/note_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/note_header"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000"
        app:layout_constraintBottom_toBottomOf="@+id/note_content"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>