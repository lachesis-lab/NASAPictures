<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.NASAPictures" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorButtonNormal">@color/color_gray</item>
        <item name="android:textColor">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomAppBarStyle">@style/MyBottomAppBarStyle</item>
<!--        <item name="android:actionBarStyle">@style/MyActionBar</item>-->
    </style>

    <style name="Theme.NASAPicturesDark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:backgroundTint">@color/dark_background</item>
        <item name="android:colorButtonNormal">@color/chip_dark_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="bottomAppBarStyle">@style/MyBottomAppBarStyleDark</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyBottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="MyBottomAppBarStyleDark" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="MyActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:background">@color/colorPrimary</item>
<!--        <item name="android:titleTextStyle">@style/MyTextAppearance</item>-->
    </style>

